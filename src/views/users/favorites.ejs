<%- include('../partials/head')%>

  <%- include('../partials/header')%>

    <!--Si tiene favorito, que muestre-->
    <main class="favorites">

      <div style="width: 85%; margin: auto; padding-bottom: 2rem;">
      <div class="favorites-header">
        <h1>Favoritos </h1>
        <div>
          <button>
        <span class="material-symbols-outlined">
          add_shopping_cart
          </span>
          <span class="addAll">Agregar todo al carrito</span>
        </button>
        </div>
      </div>
      <span class="counter"><%= products.length %> art√≠culos</span>
    </div>

      <div class="favorites-container">
        <% products.forEach(fav=> { %>
          <article>
            
              <div class="favorite-img">
                <img src="/img/products/<%= fav['product'].image%>" width=100>
                <button id="addToFavs" onclick="addProductToFav('<%= fav['product'].id %>')">
                  <i class="fas fa-heart fav-red"></i>
                </button>
              </div>
              <div class="details">
                <span class="name">
                  <%= fav['product'].name %>
                </span>
                <span>
                  <%= fav['product'].category %> 
                </span>
                <div class="cart-logo">
                  <span class="price">
                   $ <%= fav['product'].price.replace('.', ',') %>
                  </span>
                  <button onclick="addProductToCart('<%= fav['product'].id %>')">
                  <span class="material-symbols-outlined cart">
                    add_shopping_cart
                    </span>
                  </button>
                </div>
              </div>
          </article>
        
            <% }) %>
      </div>

    </main>
<div style="height: 8rem;"></div>
    <%- include('../partials/footer')%>